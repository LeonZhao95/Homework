<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/brown">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp">
        <ImageButton

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_light"
            android:id="@+id/btn_back" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/register"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/test"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="right|bottom"

            android:background="@android:color/transparent"
            android:textColor="@color/test"
            android:textSize="16sp"
            android:text="已有账号?"
            android:id="@+id/btn_login" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"

        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">
        <!--<ImageView-->

            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:src="@drawable/phone"-->
            <!--android:layout_gravity="bottom"-->
            <!--android:layout_marginRight="2px"/>-->
        <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:paddingLeft="70dp"
            android:layout_marginLeft="3dp"
            android:inputType="phone"
            android:hint="请输入手机号码"
            android:textColor="@color/brown"
            android:background="@drawable/phone_etbg"
            android:textSize="18sp"
            android:id="@+id/et_phonenumber" />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginLeft="75dp"
            android:layout_height="20dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#f55b78"
            android:id="@+id/tv_message_phone" />

        <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:background="@drawable/lock_etbg"
            android:paddingLeft="70dp"
            android:layout_marginLeft="3dp"

            android:id="@+id/et_fpwd" />

        <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:singleLine="true"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:background="@drawable/lock_etbg"
            android:paddingLeft="70dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/et_spwd" /> <!--这里既可以显示密码长度提示，也可以显示密码不一致提示信息 显示密码不一致信息颜色：@color/test_wrong2-->
        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginLeft="75dp"
            android:layout_height="20dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"


            android:textSize="15sp"
            android:textColor="@color/test"
            android:id="@+id/tv_message_pwd" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_verification"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:paddingLeft="70dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            android:textColor="@color/brown"
            android:hint="验证码"
            android:background="@drawable/msg_etbg"
            android:inputType="number" />
        <Button
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="获取验证码"
            android:textColor="@color/test"
            android:textSize="15sp"
            android:background="@drawable/whitecirsqu_btn"
            android:layout_alignBottom="@+id/et_verification"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/et_verification"
            android:layout_toEndOf="@+id/et_verification"
            android:id="@+id/btn_verification" /></RelativeLayout>
    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="78dp"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#f55b78"
        android:id="@+id/tv_message_ver" />
    <Button
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/whitecir_btn"
        android:text="提交"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:id="@+id/btn_confirm" />

</LinearLayout>
